---
import { footerLinks, type FooterLink } from "../config/navigation";
---
<footer class="govuk-footer">
    <div class="govuk-width-container">
        <div class="govuk-footer__meta">
        <div class="govuk-footer__meta-item govuk-footer__meta-item--grow">
            <h2 class="govuk-visually-hidden">Support links</h2>        
            <ul class="govuk-footer__inline-list">
            {footerLinks.map((link: FooterLink) => (
            <li class="govuk-footer__inline-list-item">
                <a class="govuk-footer__link" href={link.href}>
                {link.label}
                </a>
            </li>
            ))}
            </ul>
            <span class="govuk-footer__licence-description">
            <p class="govuk-footer_license-logo"><b>MIT</b></p>
            All content is available under the
            <a
                class="govuk-footer__link"
                href="https://github.com/leowilkin/govuk-personal/blob/main/LICENSE"
                rel="license">MIT License</a>, except where otherwise stated
            </span>
        </div>
        <div class="govuk-footer__meta-item">
            <a
            class="govuk-footer__link"
            href="https://github.com/leowilkin/govuk-personal/blob/main/LICENSE">
            Â© GDS with modifications from Leo Wilkin
            </a>
        </div>
        </div>
    </div>
</footer>
