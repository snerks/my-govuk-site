---
export interface BreadcrumbItem {
  text: string;
  href?: string;
}

export interface Props {
  items: BreadcrumbItem[];
  ariaLabel?: string;
}

const { items, ariaLabel = "Breadcrumb" } = Astro.props;
---

<nav class="govuk-breadcrumbs" aria-label={ariaLabel}>
  <ol class="govuk-breadcrumbs__list">
    {items.map((item, index) => (
      <li class="govuk-breadcrumbs__list-item">
        {item.href ? (
          <a class="govuk-breadcrumbs__link" href={item.href}>
            {item.text}
          </a>
        ) : (
          <span class="govuk-breadcrumbs__link" aria-current="page">
            {item.text}
          </span>
        )}
      </li>
    ))}
  </ol>
</nav>